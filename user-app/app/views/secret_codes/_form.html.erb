<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="header">
              <h4 class="title">Generate Secret Code</h4>
          </div>
          <div class="content">
            <%= form_with(model: secret_code, local: true) do |form| %>
              <% if secret_code.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(secret_code.errors.count, "error") %> prohibited this secret_code from being saved:</h2>

                  <ul>
                  <% secret_code.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label>No of secret codes</label>
                    <select name="number">
                      <option value="1">1</option>
                      <option value="10" selected>10</option>
                      <option value="20">20</option>
                      <option value="50">50</option>
                      <option value="100">100</option>
                    </select>
                  </div>
                </div>
              </div>
              <%= form.submit class:"btn btn-info btn-fill pull-right" %>
              <div class="clearfix"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>